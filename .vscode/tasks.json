{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run headless dlv",
            "type": "process",
            "command": "dlv",
            "args": [
                "debug",
                "--headless",
                "--listen=:2345",
                "--api-version=2",
                "--continue",
                "--accept-multiclient",
                ".",
                "--",
                "test_data"
            ],
            "isBackground": true,
            "problemMatcher": {
                "owner": "go",
                "fileLocation": "relative",
                "pattern": {
                    "regexp": "^couldn't start listener:"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^API server listening at:",
                    "endsPattern": "^API server listening at:"
                }
            }
        }
    ]
}